@rendermode InteractiveServer
@inject AssetService AssetService
<h3>CreateAssetComponent</h3>

<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">Navn</label>
    </div>
    <div class="col-6">
        <InputText @bind-Value="asset.Name" class="form-control"></InputText>
    </div>
</div>
<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">Værdi</label>
    </div>
    <div class="col-6">
        <InputNumber @bind-Value="asset.Value" class="form-control"></InputNumber>
    </div>
</div>
<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">Særeje</label>
    </div>
    <div class="col-6">
        <InputText @bind-Value="asset.SeparateEstate" class="form-control"></InputText>
    </div>
</div>
@code {
    [SupplyParameterFromForm]
    public Asset asset { get; set; } = new Asset();
    public async Task CreateAsset()
    {
        await AssetService.CreateAsset(asset);
    }
}
