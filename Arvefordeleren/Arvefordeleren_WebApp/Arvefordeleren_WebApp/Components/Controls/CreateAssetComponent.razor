@inject AssetService AssetService
<h3>CreateAssetComponent</h3>

<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">Name</label>
    </div>
    <div class="col-6">
        <InputText @bind-Value="asset.Name" class="form-control"></InputText>
    </div>
    <div class="col">
        <ValidationMessage For="() => asset.Name"></ValidationMessage>
    </div>
</div>
<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">City</label>
    </div>
    <div class="col-6">
        <InputNumber @bind-Value="asset.Value" class="form-control"></InputNumber>
    </div>
    <div class="col">
        <ValidationMessage For="() => asset.Value"></ValidationMessage>
    </div>
</div>
<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">Online</label>
    </div>
    <div class="col-6">
        <InputText @bind-Value="asset.SeparateEstate" class="form-check-input"></InputText>
    </div>
</div>
@code {
    private Asset asset { get; set; } = new Asset();
    public void CreateAsset()
    {
        AssetService.CreateAsset(asset);
        asset = new Asset();
    }
}
