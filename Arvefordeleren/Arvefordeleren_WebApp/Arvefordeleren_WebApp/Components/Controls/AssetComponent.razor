@rendermode InteractiveServer
@inject AssetService AssetService
<h3>AssetComponent</h3>

<div>
    @if (!isEditing)
    {
        <div>
            <p><strong>@Asset.Name</strong></p>
            <p>Værdi: @Asset.Value</p>
            <p>Særeje: @Asset.SeparateEstate</p>
            <button @onclick="EditAsset">Edit</button>
        </div>
    }
    else
    {
        <div>
            <input type="text" @bind="@Asset.Name" />
            <input type="number" @bind="@Asset.Value" />
            <input type="text" @bind="@Asset.SeparateEstate" />
            <button @onclick="SaveAsset">Save</button>
            <button @onclick="CancelEdit">Cancel</button>
        </div>
    }
</div>

@code {
    [Parameter]
    public Asset Asset { get; set; }

    private bool isEditing = false;

    private void EditAsset()
    {
        isEditing = true;
    }

    private async Task SaveAsset()
    {
        await AssetService.UpdateAsset(Asset);
        isEditing = false;
    }

    private void CancelEdit()
    {
        isEditing = false;
    }
}