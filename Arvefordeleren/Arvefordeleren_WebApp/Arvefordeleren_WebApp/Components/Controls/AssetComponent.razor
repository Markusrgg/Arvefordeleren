@rendermode InteractiveServer
<h5>@(isUpdateMode ? "Opdater " + asset.Name : "Opret Aktiv")</h5>

<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">Navn</label>
    </div>
    <div class="col-6">
        <InputText @bind-Value="asset.Name" class="form-control"></InputText>
    </div>
</div>
<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">Værdi</label>
    </div>
    <div class="col-6">
        <InputNumber @bind-Value="asset.Value" class="form-control"></InputNumber>
    </div>
</div>
<div class="row mb-3">
    <div class="col-2">
        <label class="col-form-label">Særeje</label>
    </div>
    <div class="col-6">
        <InputText @bind-Value="asset.SeparateEstate" class="form-control"></InputText>
    </div>
</div>

@code {
    [Parameter]
    public Asset asset { get; set; }

    [Parameter]
    public bool isUpdateMode { get; set; }
}
